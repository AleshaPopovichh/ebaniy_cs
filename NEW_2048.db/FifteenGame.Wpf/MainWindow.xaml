<Window x:Class="FifteenGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FifteenGame.Wpf" xmlns:viewmodels="clr-namespace:FifteenGame.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="2048" Height="600" Width="500" Loaded="Window_Loaded" KeyDown="Window_KeyDown" Focusable="True">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Игрок: " FontSize="16" Foreground="#776E65" />
                <TextBlock Text="{Binding UserName}" FontSize="16" FontWeight="Bold" Foreground="#776E65" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Счет" FontSize="12" Foreground="#776E65" HorizontalAlignment="Center" />
                    <Border Background="#BBADA0" Padding="10,6" CornerRadius="6">
                        <TextBlock Text="{Binding Score}" FontSize="16" Foreground="White" HorizontalAlignment="Center" />
                    </Border>
                </StackPanel>
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Лучший" FontSize="12" Foreground="#776E65" HorizontalAlignment="Center" />
                    <Border Background="#BBADA0" Padding="10,6" CornerRadius="6">
                        <TextBlock Text="{Binding BestScore}" FontSize="16" Foreground="White" HorizontalAlignment="Center" />
                    </Border>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Ходы" FontSize="12" Foreground="#776E65" HorizontalAlignment="Center" />
                    <Border Background="#BBADA0" Padding="10,6" CornerRadius="6">
                        <TextBlock Text="{Binding MoveCount}" FontSize="16" Foreground="White" HorizontalAlignment="Center" />
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="1" Text="Используйте стрелки или WASD для перемещения плиток." Foreground="#776E65" Margin="0,0,0,10" />

        <Border Grid.Row="2" Background="#BBADA0" CornerRadius="8" Padding="10">
            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="4" Columns="4" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Background="{Binding Background}" CornerRadius="6">
                            <TextBlock Text="{Binding Text}" FontSize="28" FontWeight="Bold" Foreground="{Binding Foreground}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</Window>
